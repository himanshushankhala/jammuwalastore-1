<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:background="@drawable/bg_products"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:weightSum="2">

            <ImageView
                android:id="@+id/VegItemImage"
                android:layout_width="0dp"
                android:layout_height="@dimen/_65sdp"
                android:layout_weight="1"
                android:background="@drawable/ic_app_logo"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/whitney_semibold_bas"
                    android:text="Category Name"
                    android:textColor="@color/colorBlackMat"
                    android:textSize="@dimen/_17sdp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_CheckIt_mainlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="?attr/colorPrimary"
            android:text="Check It"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15sdp"/>
    </LinearLayout>
</LinearLayout>
